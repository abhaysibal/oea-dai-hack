{
	"name": "Ingest devices data from Graph",
	"properties": {
		"activities": [
			{
				"name": "IngestDevicesData_From_AAD",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"AbsoluteUrl": "$['@odata.nextLink']"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['value'][0]['id']"
								},
								"sink": {
									"name": "EntryId",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['approximateLastSignInDateTime']"
								},
								"sink": {
									"name": "LastCheckIn",
									"type": "DateTime"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['deviceId']"
								},
								"sink": {
									"name": "DeviceId"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['displayName']"
								},
								"sink": {
									"name": "DeviceName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['isCompliant']"
								},
								"sink": {
									"name": "Compliant",
									"type": "Boolean"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['isManaged']"
								},
								"sink": {
									"name": "IsManaged",
									"type": "Boolean"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['operatingSystem']"
								},
								"sink": {
									"name": "OS",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['operatingSystemVersion']"
								},
								"sink": {
									"name": "OSVersion",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['value'][0]['sourceType']"
								},
								"sink": {
									"name": "Ownership",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['Column_1']"
								}
							}
						],
						"collectionReference": "$['value'][0]['physicalIds']",
						"mapComplexValuesToString": true
					}
				},
				"inputs": [
					{
						"referenceName": "MicrosoftGraphDevicesEndpoint",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Devices_Data_Aad_Devices",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}